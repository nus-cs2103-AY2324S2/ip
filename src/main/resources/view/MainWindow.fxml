<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baron.views.MainWindow">
   <children>
      <VBox minHeight="600" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
         <children>
            <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true"
                        VBox.vgrow="ALWAYS"
                        AnchorPane.leftAnchor="0"
                        AnchorPane.rightAnchor="0">
               <content>
                  <VBox fx:id="dialogContainer" minWidth="-Infinity" VBox.vgrow="ALWAYS" />
               </content>
            </ScrollPane>
            <HBox AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" >
               <children>
                  <TextField fx:id="userInput" onAction="#handleUserInput" HBox.hgrow="ALWAYS" />
                  <Button fx:id="sendButton" onAction="#handleUserInput" mnemonicParsing="false" text="Send" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
