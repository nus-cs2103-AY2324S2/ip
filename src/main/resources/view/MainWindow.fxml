<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="438.0" prefWidth="500.0" style="-fx-background-color: #979e89;" xmlns="http://javafx.com/javafx/17.0.7" xmlns:fx="http://javafx.com/fxml/1" fx:controller="duke.gui.MainWindow">
   <children>
       <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" hvalue="1.0" prefHeight="426.0" prefWidth="424.0" fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
           <content>
               <VBox fx:id="dialogContainer" style="-fx-background-color: #979e89;">
                   <padding>
                       <Insets bottom="10.0" top="15.0" />
                   </padding>
               </VBox>
           </content>
       </ScrollPane>
      <HBox alignment="BOTTOM_CENTER" prefHeight="51.0" prefWidth="433.0" spacing="1.0">
         <children>
             <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="59.0" prefWidth="368.0" style="-fx-background-color: #ffffff;" HBox.hgrow="ALWAYS" promptText="What can I do for you?..."/>
             <Button fx:id="sendButton" minWidth="50.0" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="33.0" prefWidth="59.0" style="-fx-background-color: #877E6E; -fx-font-size: 11;" text="SEND" wrapText="true">
               <font>
                  <Font name="Bell MT" size="1.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>


