<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="5" style="-fx-background-color: #211951;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.GUi.MainWindow">
   <children>
      <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" prefHeight="700.0" prefWidth="700.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="dialogContainer" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
      <HBox spacing="5">
         <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="47.0" promptText="enter message..." style="-fx-background-color: #F3F3FF;" HBox.hgrow="ALWAYS" />
         <Button fx:id="sendButton" minHeight="47.0" minWidth="52.0" mnemonicParsing="false" onAction="#handleUserInput" style="-fx-background-color: #15F5BA;" text="Send" />
      </HBox>
   </children>
   <padding>
      <Insets topRightBottomLeft="5" />
   </padding>
</VBox>
