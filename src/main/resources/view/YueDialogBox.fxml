<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Label?>


<!-- Solution below adapted from https://github.com/getsquared/ip/blob/master/src/main/resources/view/ToothlessDialogBox.fxml -->
<fx:root alignment="TOP_LEFT" fillHeight="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
         prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <ImageView fx:id="displayPicture" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
            <clip>
                <Circle radius="30.0" centerX="30.0" centerY="30.0" />
            </clip>
        </ImageView>

        <Region>
            <padding>
                <Insets right="5.0"/>
            </padding>

        </Region>
        <Label fx:id="dialog" minHeight="-Infinity" style="-fx-background-color: #E67504; -fx-text-fill: #FEF5ED; -fx-font-size: 14.0;
        -fx-label-padding: 13; -fx-border-radius: 20; -fx-background-radius: 10;" text="Label" wrapText="true"/>

    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>