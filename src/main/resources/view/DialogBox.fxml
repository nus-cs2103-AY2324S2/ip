<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="Pane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <style>
        -fx-padding: 10px;
    </style>
    <HBox maxHeight="2E308" maxWidth="2E308" prefWidth="500.0">
        <style>
            -fx-background-color: #FECBBB;
            -fx-background-radius: 30px;
            -fx-spacing: 10px;
            -fx-padding: 20px;
        </style>
        <padding>
            <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
        </padding>
        <ImageView fx:id="displayPicture" fitHeight="120" fitWidth="100" preserveRatio="true">
         <HBox.margin>
            <Insets bottom="0.0"/>
         </HBox.margin></ImageView>
        <Text fx:id="dialog" text="Label" textAlignment="LEFT">
            <font>
                <Font name="Comic Sans MS" size="16.0" />
            </font>
        </Text>
    </HBox>
</fx:root>
