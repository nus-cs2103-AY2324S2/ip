<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>

<fx:root alignment="TOP_RIGHT"
         maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
         minWidth="400.0" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         spacing="15"
>
    <padding>
        <Insets bottom="10" right="10" left="10" top="10"/>
    </padding>
    <children>

        <Label fx:id="dialog" text="Label" minWidth="450" wrapText="true" minHeight="-Infinity" textAlignment="RIGHT"/>
<!--        <Text fx:id="dialog" text="Label" />-->

        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true">
            <clip>
                <Circle centerX="49.5" centerY="49.5" radius="49.5" />
            </clip>
        </ImageView>

    </children>

</fx:root>