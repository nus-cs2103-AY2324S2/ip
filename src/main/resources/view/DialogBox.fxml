<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<fx:root spacing="10.0" style="-fx-background-color: transparent; -fx-padding: 10; -fx-background-radius: 10; -fx-border-color: transparent;" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="70.0" spacing="10">
        <ImageView fx:id="profileImage" fitHeight="50" fitWidth="50" preserveRatio="true" />
        <VBox maxWidth="250.0" prefHeight="70.0" style="-fx-background-radius: 15; -fx-border-color: transparent; -fx-border-radius: 10; -fx-background-color: lightblue;">
            <Label fx:id="senderName" alignment="TOP_LEFT" nodeOrientation="LEFT_TO_RIGHT" text="Sender's Name">
            <VBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
            <font>
               <Font name="Arial Bold" size="14.0" />
            </font></Label>
         <TextFlow nodeOrientation="LEFT_TO_RIGHT">
            <children>
               <Text fx:id="messageContent" strokeType="OUTSIDE" strokeWidth="0.0" text="message text">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Text>
            </children>
            <VBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" />
            </VBox.margin>
         </TextFlow>
         <TextFlow textAlignment="RIGHT">
            <children>
               <Text fx:id="timeStamp" nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="19:00">
                  <font>
                     <Font name="System Italic" size="9.0" />
                  </font>
               </Text>
            </children>
            <VBox.margin>
               <Insets bottom="2.0" left="10.0" right="10.0" />
            </VBox.margin>
         </TextFlow>
        </VBox>
    </HBox>
</fx:root>
