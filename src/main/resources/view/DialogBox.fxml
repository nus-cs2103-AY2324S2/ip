<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_RIGHT" maxHeight="-Infinity" maxWidth="Infinity" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity">
         <children>
              <Label fx:id="displayName" maxHeight="-Infinity" maxWidth="-Infinity" style="-fx-font-weight: bold;" text="Label" />
              <Label fx:id="dialog"  maxHeight="-Infinity" maxWidth="-Infinity" style="-fx-background-color: #F2CD4B; -fx-background-radius: 5; -fx-label-padding: 5 10;" text="Label" wrapText="true" />
         </children>
      </VBox>
        <ImageView fx:id="displayPicture" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>
